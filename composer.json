{
  "name": "minetro/api",
  "description": "Api",
  "type": "library",
  "license": ["BSD-3-Clause"],
  "homepage": "https://github.com/minetro/api",
  "authors": [
    {
      "name": "Milan Felix Sulc",
      "homepage": "http://jfx.cz"
    }
  ],
  "require": {
    "php": ">= 5.5",
    "nette/di": "~2.3.0|~2.4.0",
    "nikic/fast-route": "^1.0"
  },
  "require-dev": {
    "nette/tester": "1.7.0",
    "ninjify/qa": "^0.3.0"
  },
  "autoload": {
    "psr-4": {
      "Minetro\\Api\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": ["tests/"]
  },
  "scripts": {
    "qa": [
      "@qa-linter",
      "@qa-codesniffer"
    ],
    "qa-codesniffer": [
      "Ninjify\\Composer\\Script\\CodeSniffer::execute"
    ],
    "qa-codefixer": [
      "Ninjify\\Composer\\Script\\CodeFixer::execute"
    ],
    "qa-linter": [
      "Ninjify\\Composer\\Script\\Linter::execute"
    ]
  },
  "extra": {
    "ninjify": {
      "qa": {
        "codesniffer": {
          "ruleset": "nette",
          "folders": [
            "src",
            "tests"
          ]
        },
        "codefixer": {
          "ruleset": "nette",
          "folders": [
            "src",
            "tests"
          ]
        },
        "linter": {
          "folders": [
            "src",
            "tests"
          ]
        }
      }
    }
  }
}
